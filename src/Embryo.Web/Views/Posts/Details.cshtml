@model Embryo.Web.Models.Post
@{
    ViewData["Title"] = Model.Title;
}

<div class="row">
    <div class="col-md-12">

        <div class="well">
            <h2>@Model.Title</h2>
            @if (Model.IsPublished)
            {
                <h5>@Model.PublishedDate</h5>
            }
            else
            {
                <h5>@Model.LastUpdated</h5>
            }

            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <hr />

            <div>@Model.Content</div>

        </div>

    </div>
</div>
